---
/*
  SocialMedia.astro - Premium Glass-Metal 3D Cube Slider
  - Transparent background
  - Auto text color
  - Large heading & paragraph
  - Red button with metallic gradient hover
  - Cinematic 3D cube with corner tilt + floating + gloss reflection
  - Hover pause on cube
*/
---

<link
  rel="stylesheet"
  href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css"
/>

<section id="social-media-slider" style="padding:2rem; width:100%;">
  <div class="container" style="display:flex; flex-wrap:wrap; gap:2rem; padding:2rem; width:100%;">

    <!-- LEFT SIDE: Text Box -->
    <div class="slider-content" style="
        position:relative;
        flex:1;
        min-width:250px;
        min-height:300px;
        padding:2rem;
        display:flex;
        flex-direction:column;
        justify-content:flex-start;
        gap:1rem;
        color: inherit;
      ">
      <div style="font-size:clamp(2rem, 4vw, 2.8rem); font-weight:800; line-height:1.3;">
        SOCIAL MEDIA INFLUENCERS PROGRAM
      </div>

      <div style="font-size:clamp(1.1rem, 2.5vw, 1.3rem); font-weight:400; line-height:1.5;">
        This program hires top social media influencers to showcase Biobolics products online. Influencers are rewarded for their promotional efforts and receive products as incentives.
      </div>

      <div style="margin-top:auto; padding-top:1rem;">
        <button class="social-button">Learn More</button>
      </div>
    </div>

    <!-- RIGHT SIDE: Cube Slider -->
    <div class="slider-wrapper" style="flex:1; min-width:250px; min-height:300px; display:flex; align-items:center; justify-content:center; perspective:2000px;">
      <div class="swiper" style="width:320px; height:392px; transform-style: preserve-3d;">
        <div class="swiper-wrapper">
          <div class="swiper-slide"><img src="/images/bio-red.webp" alt="Influencer RED" /></div>
          <div class="swiper-slide"><img src="/images/bio-run.webp" alt="Influencer RUN" /></div>
          <div class="swiper-slide"><img src="/images/bio-at.webp" alt="Influencer AT" /></div>
          <div class="swiper-slide"><img src="/images/bio-social.webp" alt="Influencer SOCIAL" /></div>
        </div>
      </div>
    </div>

  </div>
</section>

<style>
/* ===============================
   SWIPER CUBE SLIDER
================================ */
.swiper-slide {
  border-radius: 16px;
  background: rgba(255,255,255,0.02);
  display:flex;
  align-items:center;
  justify-content:center;
  overflow:hidden;
  position:relative;
  user-select:none;
  box-shadow:
    inset 10px 10px 35px rgba(255,255,255,0.22),
    inset -10px -10px 35px rgba(0,0,0,0.18),
    0 28px 60px rgba(0,0,0,0.35);
  transition: transform 0.35s ease-in-out, box-shadow 0.35s ease-in-out;
}

/* GLOSS REFLECTION */
.swiper-slide::before {
  content:"";
  position:absolute;
  inset:0;
  background: linear-gradient(120deg, rgba(255,255,255,0.25) 0%, rgba(255,255,255,0) 60%);
  pointer-events:none;
  border-radius: 16px;
}

.swiper-slide::after {
  content:"";
  position:absolute;
  inset:0;
  background: radial-gradient(circle at 80% 20%, rgba(255,255,255,0.15), rgba(255,255,255,0));
  pointer-events:none;
  border-radius: 16px;
}

.swiper-slide:hover {
  box-shadow:
    inset 12px 12px 40px rgba(255,255,255,0.25),
    inset -12px -12px 40px rgba(0,0,0,0.2),
    0 32px 70px rgba(0,0,0,0.38);
  transform: translateY(-6px);
}

.swiper-slide img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 16px;
  position: relative;
  z-index:1;
}

/* BUTTON */
.social-button {
  background: linear-gradient(to bottom, #ff2b2b, #c00000);
  color: #fff;
  font-weight:600;
  font-size:clamp(0.95rem, 2.5vw, 1.1rem);
  border:none;
  padding:12px 20px;
  border-radius:10px;
  cursor:pointer;
  transition: all 0.3s ease;
}

.social-button:hover {
  background: linear-gradient(to bottom, #c0c0c0, #e5e5e5);
  color: #000;
  transform: scale(0.98);
}

/* Responsive */
@media (max-width:1050px) { .swiper { width:256px; height:314px; } }
@media (max-width:470px)  { .swiper { width:240px; height:313px; } }

/* CINEMATIC 3D CUBE + TILT + FLOATING */
@keyframes rotateCubeTilt {
  0%   { transform: rotateX(0deg) rotateY(0deg) rotateZ(2deg) translateY(0px); }
  25%  { transform: rotateX(10deg) rotateY(90deg) rotateZ(-2deg) translateY(-4px); }
  50%  { transform: rotateX(-10deg) rotateY(180deg) rotateZ(1deg) translateY(-2px); }
  75%  { transform: rotateX(5deg) rotateY(270deg) rotateZ(-1deg) translateY(3px); }
  100% { transform: rotateX(0deg) rotateY(360deg) rotateZ(2deg) translateY(0px); }
}

.swiper-wrapper {
  animation: rotateCubeTilt 16s linear infinite;
  transform-style: preserve-3d;
}

.swiper-wrapper:hover {
  animation-play-state: paused;
}
</style>

<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js" defer></script>

<script>
document.addEventListener("DOMContentLoaded", () => {
  new Swiper(".swiper", {
    effect: "cube",
    grabCursor: true,
    loop: true,
    speed: 1000,
    cubeEffect: {
      shadow: true,
      slideShadows: true,
      shadowOffset: 60,
      shadowScale: 1,
    },
    autoplay: {
      delay: 2600,
      pauseOnMouseEnter: true,
    },
  });
});
</script>
