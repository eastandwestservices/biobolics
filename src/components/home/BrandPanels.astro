---
import brands from '@/lib/brands';

const brandsData = brands.map((b) => ({
  slug: b.slug,
  label:
    b.slug === 'sports' ? 'SPORTS' :
    b.slug === 'vitamins' ? 'VITAMINS' :
    b.slug === 'gummies' ? 'GUMMIES' :
    b.slug === 'stevia' ? 'STEVIA' : '',
  slides: [
    `/brands/${b.slug}-1.webp`,
    `/brands/${b.slug}-2.webp`,
    `/brands/${b.slug}-3.webp`,
    `/brands/${b.slug}-4.webp`
  ],
  link: `/brand/${b.slug}`
}));
---

<section class="brand-panels">
  {brandsData.map((brand) => (
    <a href={brand.link} class="brand-card">

      <!-- SLIDER -->
      <div class="slider" data-slider>
        {brand.slides.map((img, i) => (
          <img src={img} alt={brand.label} class={i === 0 ? 'active' : ''} />
        ))}
        <div class="progress-bar"></div>
      </div>

      <!-- CTA -->
      <div class="cta-wrapper">
        <span class="cta-button">VISIT NOW</span>
      </div>

    </a>
  ))}
</section>

<style>
/* ===============================
   GRID
================================ */
.brand-panels {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  padding: 2rem;
}

/* ===============================
   CARD
================================ */
.brand-card {
  position: relative;
  height: 480px;
  border-radius: 18px;
  overflow: hidden;
  text-decoration: none;
  box-shadow: 0 14px 35px rgba(0,0,0,0.28);
  transition: transform 0.4s ease, box-shadow 0.4s ease;
}

.brand-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 26px 60px rgba(0,0,0,0.45);
}

/* ===============================
   SLIDER
================================ */
.slider {
  position: relative;
  width: 100%;
  height: 100%;
}

.slider img {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0;
  transition: opacity 1.8s ease-in-out;
}

.slider img.active {
  opacity: 1;
}

/* ===============================
   PROGRESS BAR
================================ */
.progress-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  height: 2px;
  width: 0%;
  background: linear-gradient(to right, #ff2b2b, #ff6a6a);
}

/* ===============================
   CTA
================================ */
.cta-wrapper {
  position: absolute;
  bottom: 2rem;
  left: 50%;
  transform: translateX(-50%);
  z-index: 5;
}

.cta-button {
  padding: 0.75rem 2.4rem;
  font-size: 1.05rem;
  font-family: 'Montserrat', system-ui, sans-serif;
  font-weight: 500;
  letter-spacing: 0.14em;
  color: #0a0f2a;
  background: linear-gradient(145deg, #f2f2f2, #d6d6d6);
  border-radius: 999px;
  box-shadow:
    inset 0 1px 0 rgba(255,255,255,0.9),
    0 12px 30px rgba(0,0,0,0.35);
  transition: all 0.4s ease;
}

.brand-card:hover .cta-button {
  background: linear-gradient(145deg, #ff2b2b, #c90000);
  color: #ffffff;
  transform: translateY(-2px);
}

/* ===============================
   RESPONSIVE
================================ */
@media (max-width: 1024px) {
  .brand-card { height: 440px; }
}

@media (max-width: 768px) {
  .brand-panels { grid-template-columns: 1fr; }
  .brand-card { height: 400px; }
}

@media (max-width: 480px) {
  .brand-card { height: 340px; }
  .cta-button { font-size: 0.95rem; }
}
</style>

<script type="module">
document.querySelectorAll('[data-slider]').forEach(slider => {
  const slides = slider.querySelectorAll('img');
  const bar = slider.querySelector('.progress-bar');
  let index = 0;
  const duration = 6000;

  function showSlide(i) {
    slides.forEach(s => s.classList.remove('active'));
    slides[i].classList.add('active');
    bar.style.transition = 'none';
    bar.style.width = '0%';
    requestAnimationFrame(() => {
      bar.style.transition = `width ${duration}ms linear`;
      bar.style.width = '100%';
    });
  }

  showSlide(index);
  setInterval(() => {
    index = (index + 1) % slides.length;
    showSlide(index);
  }, duration);
});
</script>
