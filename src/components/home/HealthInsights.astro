---
const images = [
  "/images/image1.webp",
  "/images/image2.webp",  // add more images here
  "/images/image3.webp"
];
---
<section class="health-insights">
  <div class="left-column">
    {images.map((img, index) => (
      <img src={img} alt={`Insight ${index + 1}`} class="fade-image" />
    ))}
  </div>

  <div class="right-column">
    <h2>Power of Nutrition</h2>
    <p>Discover the science-backed benefits of our products and how they can improve your health and wellbeing.</p>
    <ul>
      <li>Boosts immunity</li>
      <li>Enhances energy</li>
      <li>Supports overall wellness</li>
    </ul>
  </div>
</section>

<style>
.health-insights {
  display: flex;
  width: 100%;
  min-height: 500px;
}

.left-column, .right-column {
  flex: 1;
}

.left-column {
  position: relative;
}

.fade-image {
  position: absolute;
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: 0;
  animation: fade 15s infinite;
}

.fade-image:nth-child(1) { animation-delay: 0s; }
.fade-image:nth-child(2) { animation-delay: 5s; }
.fade-image:nth-child(3) { animation-delay: 10s; }

@keyframes fade {
  0%, 33% { opacity: 0; }
  10%, 23% { opacity: 1; }
  33%, 100% { opacity: 0; }
}

.right-column {
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 40px;
}
</style>
