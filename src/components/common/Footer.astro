---
const currentYear = new Date().getFullYear();

const footerLinks = {
  products: [
    { name: 'Sports Nutrition', href: '/brand/sports' },
    { name: 'Vitamins', href: '/brand/vitamins' },
    { name: 'Gummies', href: '/brand/gummies' },
    { name: 'Rite Stevia', href: '/brand/stevia' },
  ],
  company: [
    { name: 'About Us', href: '/about' },
    { name: 'Catalogue', href: '/nutrition' },
    { name: 'Contact', href: '/contact' },
    { name: 'Distributors', href: '/distributors' },
  ],
  legal: [
    { name: 'Privacy Policy', href: '/privacy' },
    { name: 'Terms of Service', href: '/terms' },
  ]
};
---

<footer class="modern-footer">
  <div class="footer-container">
    
    <!-- Top Section: Brand & Newsletter -->
    <div class="footer-top">
      <div class="brand-column">
        <a href="/" class="footer-logo">
          <img src="/images/logo-dark.png" alt="Biobolics" class="logo-img" />
        </a>
        <p class="brand-text">
          Empowering your wellness journey with science-backed nutrition. Premium quality, proven results, and a commitment to your health.
        </p>
      </div>

      <div class="newsletter-column">
        <h3>Stay Connected</h3>
        <p>Join our newsletter for exclusive updates and health tips.</p>
        <form class="newsletter-form" onsubmit="event.preventDefault();">
          <input type="email" placeholder="Enter your email address" required />
          <button type="submit" aria-label="Subscribe">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="22" y1="2" x2="11" y2="13"></line>
              <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
            </svg>
          </button>
        </form>
      </div>
    </div>

    <div class="footer-divider"></div>

    <!-- Middle Section: Links -->
    <div class="footer-links">
      <div class="link-group">
        <h4>Products</h4>
        <ul>
          {footerLinks.products.map(link => (
            <li><a href={link.href}>{link.name}</a></li>
          ))}
        </ul>
      </div>

      <div class="link-group">
        <h4>Company</h4>
        <ul>
          {footerLinks.company.map(link => (
            <li><a href={link.href}>{link.name}</a></li>
          ))}
        </ul>
      </div>

      <div class="link-group">
        <h4>Support</h4>
        <ul>
          <li><a href="/signin">Sign In</a></li>
          <li><a href="/contact">Help Center</a></li>
          <li><a href="/faq">FAQs</a></li>
        </ul>
      </div>

      <div class="link-group social-group">
        <h4>Follow Us</h4>
        <div class="social-icons">
          <a href="#" aria-label="Facebook">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path></svg>
          </a>
          <a href="#" aria-label="Twitter">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path></svg>
          </a>
          <a href="#" aria-label="Instagram">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Bottom Section: Copyright -->
    <div class="footer-bottom">
      <p>&copy; {currentYear} Biobolics. All rights reserved.</p>
      <div class="legal-links">
        {footerLinks.legal.map(link => (
          <a href={link.href}>{link.name}</a>
        ))}
      </div>
    </div>

  </div>
</footer>

<style>
  .modern-footer {
    background-color: #0B1D33; /* Dark Navy Brand Color */
    color: #fff;
    font-family: 'Montserrat', system-ui, -apple-system, sans-serif;
    padding: 4rem 1.5rem 2rem;
    position: relative;
    overflow: hidden;
  }

  .footer-container {
    max-width: 1280px;
    margin: 0 auto;
  }

  /* Top Section */
  .footer-top {
    display: flex;
    flex-direction: column;
    gap: 3rem;
    margin-bottom: 3rem;
  }

  @media (min-width: 768px) {
    .footer-top {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
    }
  }

  .brand-column {
    max-width: 400px;
  }

  .logo-img {
    height: 40px;
    width: auto;
    filter: brightness(0) invert(1); /* Ensure logo is white */
    margin-bottom: 1.5rem;
  }

  .brand-text {
    color: #a0aec0;
    line-height: 1.6;
    font-size: 0.95rem;
  }

  .newsletter-column {
    max-width: 400px;
    width: 100%;
  }

  .newsletter-column h3 {
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #fff;
  }

  .newsletter-column p {
    color: #a0aec0;
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .newsletter-form {
    display: flex;
    gap: 0.5rem;
  }

  .newsletter-form input {
    flex: 1;
    padding: 10px 16px;
    border-radius: 8px;
    border: 1px solid rgba(255,255,255,0.1);
    background: rgba(255,255,255,0.05);
    color: #fff;
    outline: none;
    font-size: 0.9rem;
    transition: all 0.3s;
  }

  .newsletter-form input:focus {
    background: rgba(255,255,255,0.1);
    border-color: #3b82f6;
  }

  .newsletter-form button {
    background: #2563eb;
    color: #fff;
    border: none;
    border-radius: 8px;
    width: 44px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background 0.3s;
  }

  .newsletter-form button:hover {
    background: #1d4ed8;
  }

  .footer-divider {
    height: 1px;
    background: rgba(255,255,255,0.1);
    margin-bottom: 3rem;
  }

  /* Links Section */
  .footer-links {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }

  @media (min-width: 768px) {
    .footer-links {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .link-group h4 {
    color: #fff;
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }

  .link-group ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .link-group li {
    margin-bottom: 0.8rem;
  }

  .link-group a {
    color: #a0aec0;
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.3s;
  }

  .link-group a:hover {
    color: #fff;
    text-decoration: underline;
  }

  /* Social Icons */
  .social-icons {
    display: flex;
    gap: 1rem;
  }

  .social-icons a {
    color: #a0aec0;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(255,255,255,0.05);
  }

  .social-icons a:hover {
    background: #2563eb;
    color: #fff;
    transform: translateY(-3px);
  }

  .social-icons svg {
    width: 20px;
    height: 20px;
  }

  /* Bottom Section */
  .footer-bottom {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    border-top: 1px solid rgba(255,255,255,0.1);
    padding-top: 2rem;
    text-align: center;
  }

  @media (min-width: 768px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }

  .footer-bottom p {
    color: #718096;
    font-size: 0.9rem;
    margin: 0;
  }

  .legal-links {
    display: flex;
    gap: 1.5rem;
  }

  .legal-links a {
    color: #718096;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s;
  }

  .legal-links a:hover {
    color: #fff;
  }
</style>
