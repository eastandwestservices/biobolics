---
import DarkModeToggle from './DarkModeToggle.astro';
---

<header class="site-header">
  <div class="header-inner">
    <!-- Logo -->
    <div class="logo">
      <a href="/">
        <img src="/images/logo-light.png" alt="Biobolics Logo" class="logo-img logo-light" />
        <img src="/images/logo-dark.png" alt="Biobolics Logo" class="logo-img logo-dark" />
      </a>
    </div>

    <!-- Navigation -->
    <nav class="site-nav">
      <ul>
        <li><a href="/" class="nav-link">Home</a></li>
        <li><a href="/about" class="nav-link">About</a></li>
        <li><a href="/nutrition" class="nav-link">Nutrition</a></li>
        <li><a href="/brands" class="nav-link">Brands</a></li>
        <li><a href="/blog" class="nav-link">Blog</a></li>
        <li><a href="/contact" class="nav-link">Contact</a></li>
        <li><a href="/distributors" class="nav-link">Distributor</a></li>
      </ul>
    </nav>

    <!-- Right Section -->
    <div class="header-right">
      <div class="search-container">
        <button class="search-btn" aria-label="Search">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"
            viewBox="0 0 24 24" fill="none" stroke="currentColor"
            stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"/>
            <line x1="21" y1="21" x2="16.65" y2="16.65"/>
          </svg>
        </button>
        <input class="search-box" type="text" placeholder="Search..." />
      </div>

      <a href="/signin" class="signin-link">Sign In</a>

      <div class="dark-toggle">
        <DarkModeToggle />
      </div>
    </div>
  </div>
</header>

<style>
:root {
  --header-bg: #ffffff;
  --link-color: #111827;
  --font-main: 'Inter', system-ui, -apple-system, sans-serif;
}

html.dark {
  --header-bg: #0b0f19;
  --link-color: #f3f4f6;
}

/* HEADER WRAPPER */
.site-header {
  position: sticky;
  top: 0;
  z-index: 1000;
  background: var(--header-bg);
  box-shadow: 0 2px 8px rgba(0,0,0,.05);
}

/* CENTERED CONTAINER */
.header-inner {
  max-width: 1280px;
  margin: 0 auto;
  padding: 14px 24px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-family: var(--font-main);
}

/* LOGO */
.logo { height: 52px; display: flex; align-items: center; }
.logo-img { max-height: 100%; display: block; }
.logo-dark { display: none; }
html.dark .logo-light { display: none; }
html.dark .logo-dark { display: block; }

/* NAV */
.site-nav ul {
  display: flex;
  gap: 26px;
  list-style: none;
  margin: 0;
  padding: 0;
}

.nav-link {
  text-decoration: none;
  font-weight: 500;
  color: var(--link-color);
}

.nav-link:hover { color: #e10600; }

/* RIGHT */
.header-right {
  display: flex;
  align-items: center;
  gap: 16px;
}

.search-container { position: relative; }

.search-box {
  position: absolute;
  right: 110%;
  top: 50%;
  transform: translateY(-50%);
  width: 0;
  opacity: 0;
  pointer-events: none;
  transition: all .25s ease;
}

.search-container:hover .search-box {
  width: 180px;
  opacity: 1;
  pointer-events: auto;
}

.signin-link {
  text-decoration: none;
  color: var(--link-color);
}

.dark-toggle {
  display: flex;
  align-items: center;
}

/* RESPONSIVE */
@media (max-width: 900px) {
  .site-nav { display: none; }
}
</style>
