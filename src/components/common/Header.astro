    <span>Blog</span>
    <span>Sign In</span>

    <!-- Dark mode icon -->
    <button class="darkmode-btn" title="Toggle Dark Mode">
      <svg xmlns="http://www.w3.org/2000/svg" height="20" width="20" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 2a9.99 9.99 0 00-9.95 9h2.02a7.97 7.97 0 0113.86-5.3A10 10 0 0012 2z"/>
      </svg>
    </button>

    <!-- Cart icon -->
    <button class="cart-btn" title="View Cart">
      <svg xmlns="http://www.w3.org/2000/svg" height="20" width="20" viewBox="0 0 24 24" fill="currentColor">
