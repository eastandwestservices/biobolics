<header class="site-header">
  <!-- Left: Logo -->
  <div class="logo">
    <a href="/">
      <img src="/logo.png" alt="Biobolics Logo" />
    </a>
  </div>

  <!-- Center: Navigation -->
  <nav class="site-nav">
    <ul>
      <li><a href="/" class="nav-link">Home</a></li>
      <li><a href="/about" class="nav-link">About Us</a></li>
      <li><a href="/brands" class="nav-link">Our Brands</a></li>
      <li><a href="/contact" class="nav-link">Contact Us</a></li>
      <li><a href="/distributors" class="nav-link">Become a Distributor</a></li>
    </ul>
  </nav>

  <!-- Right: Icons and text -->
  <div class="header-right">
    <!-- Search icon -->
    <div class="search-container">
      <button class="search-btn" aria-label="Search">
        <svg xmlns="http://www.w3.org/2000/svg" height="20" width="20" viewBox="0 0 24 24" fill="currentColor">
