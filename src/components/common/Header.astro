      </svg>
    </button>
  </div>
</header>

<style>
/* ---------- Header ---------- */
.site-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20px 40px;
  width: 100vw;
  box-sizing: border-box;
  background-color: #ffffff;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}

/* Logo image */
.site-header .logo img {
  height: 40px;
  width: auto;
}

/* Center navigation */
.site-header .site-nav {
  flex: 1;
  display: flex;
  justify-content: center;
}

.site-header .site-nav ul {
  display: flex;
  list-style: none;
  gap: 30px;
  margin: 0;
  padding: 0;
}

.site-header .site-nav li a.nav-link {
  cursor: pointer;
  font-weight: 500;
  text-decoration: none;
  color: #333;
  transition: color 0.3s ease;
}

.site-header .site-nav li a.nav-link:hover {
  color: red;
}

/* Right section */
.site-header .header-right {
  display: flex;
  gap: 20px;
  align-items: center;
  font-weight: 500;
}

.header-right span:hover {
  color: red;
  cursor: pointer;
}

/* Search */
.search-container {
  position: relative;
}

.search-btn {
  background: none;
  border: none;
  cursor: pointer;
}

.search-box {
  position: absolute;
  right: 100%;
  top: 50%;
  transform: translateY(-50%);
  width: 0;
  opacity: 0;
  padding: 5px 10px;
  border: 1px solid #ccc;
  border-radius: 6px;
  transition: width 0.3s ease, opacity 0.3s ease;
  pointer-events: none;
}

.search-container:hover .search-box {
  width: 200px;
  opacity: 1;
  pointer-events: auto;
}

/* Icon buttons */
.darkmode-btn,
.cart-btn {
  background: none;
  border: none;
  cursor: pointer;
}

.darkmode-btn svg:hover,
.cart-btn svg:hover,
.search-btn svg:hover {
  fill: red;
}

/* Responsive */
@media (max-width: 768px) {
  .site-header {
    flex-direction: column;
    gap: 15px;
  }

  .site-header .site-nav ul {
    flex-wrap: wrap;
    justify-content: center;
  }

  .site-header .header-right {
    flex-wrap: wrap;
    justify-content: center;
  }
}

/* Prevent horizontal scroll */
body {
  overflow-x: hidden;
}
</style>
