---
import DarkModeToggle from './DarkModeToggle.astro';
---

<header class="site-header">
  <div class="header-inner">
    <!-- Logo -->
    <div class="logo">
      <a href="/">
        <img src="/images/logo-dark.png" alt="Biobolics Logo" class="logo-img" />
      </a>
    </div>

    <!-- Center Search + Catalogues + Dark Mode (Desktop Only) -->
    <div class="header-center">
      <DarkModeToggle />
      <a href="/nutrition" class="catalogue-btn">Catalogues</a>
      <div class="search-container">
        <input class="search-box" type="text" placeholder="Search..." />
        <button class="search-btn" aria-label="Search">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"
               viewBox="0 0 24 24" fill="none" stroke="currentColor"
               stroke-width="1.8" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="11" cy="11" r="8"/>
            <line x1="21" y1="21" x2="16.65" y2="16.65"/>
          </svg>
        </button>
      </div>
    </div>

    <!-- Right Static Text Items -->
    <div class="header-right">
      <a href="/brands" class="header-link">Brands</a>
      <a href="/blog" class="header-link">Blog</a>
      <a href="/signin" class="header-link">Sign In</a>

      <!-- Burger -->
      <div class="burger-wrapper">
        <button class="burger-btn" aria-label="Menu">
          <span></span>
          <span></span>
          <span></span>
        </button>
        <div class="burger-menu">
          <ul>
            <li><a href="/" class="burger-link">Home</a></li>
            <li><a href="/about" class="burger-link">About</a></li>
            <li><a href="/brand/sports" class="burger-link">Sports</a></li>
            <li><a href="/brand/vitamins" class="burger-link">Vitamins</a></li>
            <li><a href="/brand/gummies" class="burger-link">Gummies</a></li>
            <li><a href="/brand/stevia" class="burger-link">Rite Stevia</a></li>
            <li><a href="/contact" class="burger-link">Contact Us</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>

<style>
:root {
  --header-bg: #000033;
  --header-text: #ffffff;
  --link-hover: #e10600;
  --catalogue-red: #e10600;
  --catalogue-hover: #c0c0c0;
  --font-main: 'Montserrat', system-ui, sans-serif;
}

/* ================= HEADER BASE ================= */
.site-header {
  position: sticky;
  top: 0;
  z-index: 1000;
  background: var(--header-bg);
  width: 100%;
  font-family: var(--font-main);
  display: flex;
  justify-content: center;
  box-sizing: border-box;
}

.header-inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  max-width: 1440px;
  padding: 0 2rem;
  height: 80px;
}

/* LOGO */
.logo-img {
  height: 48px;
  width: auto;
}

/* ================= HEADER CENTER (DESKTOP) ================= */
.header-center {
  display: flex;
  align-items: center;
  gap: 1.5rem;
}

/* CATALOGUES BUTTON */
.catalogue-btn {
  padding: 0.6rem 1.6rem;
  font-weight: 600;
  color: #fff;
  background: var(--catalogue-red);
  border-radius: 999px;
  transition: all 0.3s ease;
  text-decoration: none;
}
.catalogue-btn:hover {
  background: linear-gradient(to bottom, #c0c0c0, #e6e6e6);
  color: #111;
}

/* SEARCH */
.search-container {
  position: relative;
}
.search-box {
  width: 320px;
  padding: 0.6rem 1rem;
  border-radius: 999px;
  border: 1px solid #ccc;
  background: #fff;
  font-size: 0.95rem;
}
.search-btn {
  position: absolute;
  right: 4px;
  top: 50%;
  transform: translateY(-50%);
  background: none;
  border: none;
  cursor: pointer;
  color: #000033;
}

/* ================= HEADER RIGHT ================= */

.header-right {
  display: flex;
  align-items: center;
  gap: 1.8rem;
}

/* STATIC HEADER LINKS (WHITE) */
.header-link {
  color: var(--header-text);
  text-decoration: none;
  font-weight: 500;
  transition: color 0.3s;
}
.header-link:hover {
  color: var(--link-hover);
}

/* ================= BURGER + DROPDOWN ================= */
.burger-wrapper {
  position: relative;
}
.burger-btn {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 28px;
  height: 22px;
  border: none;
  background: none;
  cursor: pointer;
  padding: 0;
}
.burger-btn span {
  display: block;
  height: 3px;
  width: 100%;
  background: var(--header-text);
  transition: all 0.3s ease;
}

/* BURGER MENU WHITE BACKGROUND */
.burger-menu {
  position: absolute;
  top: 100%;
  right: 0;
  width: 240px;
  max-height: 0;
  background: #ffffff;
  overflow: hidden;
  border-radius: 12px;
  box-shadow: 0 8px 24px rgba(0,0,0,0.4);
  transition: max-height 0.4s ease, padding 0.4s ease;
}

/* OPEN ON HOVER */
.burger-wrapper:hover .burger-menu {
  max-height: 900px; /* larger expanded space */
  padding: 1rem 2rem;
}

/* BURGER MENU LINKS (BLACK ON WHITE) */
.burger-menu ul {
  list-style: none;
  padding: 0;
  margin: 0;
}
.burger-menu li a {
  display: block;
  padding: 0.6rem 0;
  text-decoration: none;
  color: #000;
  font-weight: 500;
  transition: color 0.3s;
}
.burger-menu li a:hover {
  color: var(--link-hover);
}

/* ================ RESPONSIVE ================ */
@media (max-width: 1024px) {
  .header-center {
    display: none; /* only logo + burger on mobile/tablet */
  }
  .header-right .header-link {
    display: none; /* hide static header links */
  }
  .header-inner {
    justify-content: space-between;
  }
}
</style>
