---
import Layout from "../components/common/Layout.astro";
import BrandPanels from "../components/home/BrandPanels.astro";
---

<Layout title="Our Brands | Biobolics">
  <main class="brands-page">
    <section class="page-hero">
      <div class="container">
        <h1>Our Brand Ecosystem</h1>
        <p>Discover our specialized product lines designed for your specific health needs.</p>
      </div>
    </section>

    <BrandPanels />
  </main>
</Layout>

<style>
  .page-hero {
    padding: 4rem 1rem 2rem;
    text-align: center;
    background: var(--bg-secondary);
  }
  .page-hero h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }
  .page-hero p {
    font-size: 1.2rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }
</style>
