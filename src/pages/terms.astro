    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }
  .last-updated {
    color: var(--text-secondary);
    margin-bottom: 3rem;
    font-style: italic;
  }
  .legal-content h2 {
    font-size: 1.8rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }
  .legal-content p {
    margin-bottom: 1rem;
    line-height: 1.6;
    color: var(--text-secondary);
  }
</style>
