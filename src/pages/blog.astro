---
import Layout from "../components/common/Layout.astro";
---

<Layout title="Blog | Biobolics">
  <main class="blog-page">
    <section class="placeholder-section">
      <div class="container">
        <h1>Biobolics Blog</h1>
        <p>Expert articles on health, fitness, and nutrition are on their way.</p>
        <div class="coming-soon-badge">Coming Soon</div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .placeholder-section {
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    background: var(--bg-secondary);
  }
  .container {
    padding: 2rem;
  }
  h1 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }
  p {
    font-size: 1.2rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }
  .coming-soon-badge {
    display: inline-block;
    padding: 0.5rem 1.5rem;
    background: var(--primary-color, #e10600);
    color: white;
    border-radius: 2rem;
    font-weight: bold;
    font-size: 1rem;
  }
</style>
